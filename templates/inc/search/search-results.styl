.search-results-box,
.loading-search,
.empty-search-res,
.search-res-title,
._processing .search-res-container,
._processing .empty-search-res
    display none


._processing .loading-search,
._processing .search-results-box,
._processed .search-results-box,
._processed .search-res-title,
._no-results .empty-search-res
    display block


.search-res-title
    margin-bottom 1em

.search-result
    display block
    overflow hidden
    border-radius 0.25em
    padding 1em
    margin-bottom 1em

    /*a*/.main-link
        text-decoration none
    
    /*h5*/.title
        margin-bottom .25em
        text-decoration underline

    p
        color $grey

    .d-icon
        font-size smaller