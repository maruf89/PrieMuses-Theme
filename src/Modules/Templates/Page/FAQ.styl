.faq
    ul
        list-style inherit

    ol
        list-style decimal

    ol,ul
        padding-left 1.5em

    img
        display block
        margin 0.5em auto
    
    h1
        margin-bottom 1em
        color $dark-blue
        text-decoration underline
        font-size 3em

    h2
        text-indent 1em
        margin 1.5em 0 0.75em

        &::after
            content '>'
            color $dark-blue

    h3
        font-size 1.5em
        cursor pointer
        transition margin 250ms ease-in

        & + div
            overflow hidden
            max-height 0
            transition all 250ms ease-in
            border-radius 0.5em
            background $light-grey

        &:hover
            color $link-color
            text-decoration underline

    /*h3*/.toggled
        margin-top 1em

        & + div
            max-height 1000px
            padding 1.5em
            margin-bottom 2em

.no-js .faq
    h3 + div
        max-height 1000px