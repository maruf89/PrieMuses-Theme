.menu-item-has-children
    color:inherit
/* This class is added to menu item which has sub-items */

.access li.current-menu-item a,
.access li.current_page_item a
    color:           #adf;

/* other navigation */
.navigation p
    display:         inline-block;
    height:          2em;
    margin:          0 auto;
    padding:         10px;
    width:           100%;
    position:        relative;
    word-wrap:       break-word;

.content
    padding: 1em;

.divider
    height: 1px;
    width: 100%;
    background: grey;
    margin: .5em 0;


