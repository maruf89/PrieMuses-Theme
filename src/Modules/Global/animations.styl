@keyframes hideIntoLeft {
    0% {
        transform: translateX(0);
    }
    80% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-90%);
    }
}
@keyframes slideInFromLeft {
    0% {
        transform: translateX(-90%);
    }
    100% {
        transform: translateX(0);
    }
}

.loader,
.loader:before,
.loader:after {
  background: $gold;
  animation: loading 1s infinite ease-in-out;
  width: 1em;
  height: 4em;
}
.loader {
  color: $gold;
  text-indent: -9999em;
  margin: 88px auto;
  position: relative;
  font-size: 11px;
  transform: translateZ(0);
  animation-delay: -0.16s;
}
.loader:before,
.loader:after {
  position: absolute;
  top: 0;
  content: '';
}
.loader:before {
  left: -1.5em;
  animation-delay: -0.32s;
}
.loader:after {
  left: 1.5em;
}



@keyframes loading {
  0%,
  80%,
  100% {
    box-shadow: 0 0;
    height: 4em;
  }
  40% {
    box-shadow: 0 -2em;
    height: 5em;
  }
}